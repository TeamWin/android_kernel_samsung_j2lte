config EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS_DECON_EXYNOS3475 && EXYNOS_MIPI_DSI
	bool "Select LCD panel driver"

config PANEL_AID_DIMMING
	depends on EXYNOS3475_DECON_DISP_LCD
	tristate "Support AID Dimming"
	default n

config EXYNOS_DECON_MDNIE_LITE
	depends on EXYNOS3475_DECON_DISP_LCD
	tristate "Support MDNIE LITE"
	default n

config EXYNOS_DECON_LCD_SYSFS
	depends on EXYNOS3475_DECON_DISP_LCD
	tristate "Support LCD SYSFS"

config EXYNOS3475_DECON_DISP_LCD_NAME
	string
	default "s6d78a" if EXYNOS3475_DECON_LCD_S6D78A
	default "s6e8aa0" if EXYNOS3475_DECON_LCD_S6E8AA0
	default "s6e3ha0" if EXYNOS3475_DECON_LCD_S6E3HA0
	default "s6e3ha2k" if EXYNOS3475_DECON_LCD_S6E3HA2K
	default "s6e3hf2" if EXYNOS3475_DECON_LCD_S6E3HF2
	default "s6e3fa0" if EXYNOS3475_DECON_LCD_S6E3FA0
	default "s6e3fa0_vid" if EXYNOS3475_DECON_LCD_S6E3FA0_VID
	default "s6e3fa2" if EXYNOS3475_DECON_LCD_S6E3FA2
	default "sc7798d" if EXYNOS3475_DECON_LCD_SC7798D
	default "sc7798d" if EXYNOS3475_DECON_LCD_SC7798D_J2
	default "s6e88a0" if CONFIG_EXYNOS3475_DECON_LCD_S6E88A0
	default "ili9881c" if CONFIG_EXYNOS3475_DECON_LCD_ILI9881C
	help
	  This string is compared with lcd name fron Device Tree.

choice
	prompt "Select Panel"
	depends on EXYNOS3475_DECON_DISP_LCD
	help
		select the display panel.

config EXYNOS3475_DECON_LCD_S6D78A
	depends on EXYNOS3475_DECON_DISP_LCD
	depends on EXYNOS3475_DISPLAY_VIDEO_MODE
	bool "S6D78A AMOLED qHD LCD driver(540 x 960)"

